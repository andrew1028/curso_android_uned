<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Ejercicio503">

    <TextView android:text="@string/tvEstado" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvEstado"
        android:textSize="@dimen/abc_text_size_large_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnGrabar"
        android:id="@+id/btnGrabar"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/tvEstado"
        android:layout_centerHorizontal="true"
        android:onClick="grabar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnDetener"
        android:id="@+id/btnDetener"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/btnGrabar"
        android:layout_centerHorizontal="true"
        android:onClick="detener" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnReproducir"
        android:id="@+id/btnReproducir"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/btnDetener"
        android:layout_centerHorizontal="true"
        android:onClick="reproducir" />

</RelativeLayout>
